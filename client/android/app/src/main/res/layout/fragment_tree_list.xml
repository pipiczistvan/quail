<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable
                name="viewModel"
                type="com.github.pipiczistvan.quail.ui.fragment.splash.tree.TreeListViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tree_list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:adapter="@{viewModel.getTreeListAdapter()}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" tools:listitem="@layout/fragment_tree_item"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
